<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Custom Form View -->
    <record id="things_ras2_view_form" model="ir.ui.view">
        <field name="name">RAS2 Form</field>
        <field name="model">things.ras2</field>
        <field name="arch" type="xml">
        <form create="false">
            <group>
                <group>
                    <field name="productName"/>
                    <field name="location"/>
                    <field name="tz"/>
                    <field name="time_format"/>
                </group>
                <group>
                    <field name="firmwareVersion"/>
                    <field name="ownIpAddress"/>                   
                </group>
            </group>
            <group>
                <group>                                        
                    <field name="card_registered"/>
                </group>
                <group>                                        
                    <field name="period_odoo_routine_check"/>
                </group>         
            </group>
            <group>
                <group>                                        
                    <field name="too_little_time_between_clockings"/>
                </group>
                <group>                                        
                    <field name="minimumTimeBetweenClockings"/>
                </group>         
            </group>
            <group>
                <group>
                    <field name="setup_password"/>                                      
                </group>
                <group>                                        
                    <field name="timeToDisplayResultAfterClocking"/>
                </group>         
            </group>
            <group>
                <group>                                        
                    <field name="shouldGetFirmwareUpdate"/>
                </group>
                <group>
                    <field name="shutdownTerminal"/>
                </group>
            </group>
            <group>
                <group>
                    <!-- <field name="hashed_machine_id"/>          -->
                </group>
                <group>
                </group>
            </group>
            <group>
                <field name="lastConnectionOdooTerminal"/>
                <field name="incrementalLog"/>
            </group>
        </form>
        </field>
    </record>

    <!-- Custom Tree (=List) View  -->
    <record id="things_ras2_view_tree" model="ir.ui.view">
        <field name="name">RAS2 List</field>
        <field name="model">things.ras2</field>
        <field name="arch" type="xml">
            <tree create="false" import="false">
                <field name="RASxxx"/>
                <field name="productName"/>
                <field name="location"/>
                <field name="firmwareVersion"/>
                <field name="ownIpAddress"/>
                <field name="lastConnectionOdooTerminal"/>
            </tree>
        </field>
    </record>

    <!-- Custom Search Options  -->
    <record id="things_ras2_view_search" model="ir.ui.view">
        <field name="name">RAS2 Search</field>
        <field name="model">things.ras2</field>
        <field name="arch" type="xml">
            <search>
                <field name="RASxxx"/>
                <field name="productName"/>
                <field name="location"/>
            </search>
        </field>
    </record>

</odoo>